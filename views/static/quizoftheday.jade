.container.quiz
	.row.text-center.quiz-title
		h1.quiz1 Quiz of the day - {{ctrl.quiz.name}} 
	.row
		.col-md-4.quiz-col.quiz-col1
			.row
				img.quiz-img.img-responsive(ng-src='{{ctrl.quiz.settings.imageUrl}}') 
			.row.attribution
				span {{ctrl.quiz.settings.imageAttribution}} 
			.row.social(id="social media")
				p Share this quiz
				ul
					li 	
						a(target="_blank",href="http://www.facebook.com/sharer/sharer.php?u=quizalize.com/#quiz/quiz-of-the-day") 
							span.fa.fa-lg.fa-facebook  

					li 
						a(target="_blank", ng-href="http://twitter.com/home?status=I'm%20playing%20{{ctrl.quiz.name}}, the Quizalize quiz%20of%20the%20day%20%40quizalizeapp.%20http://bit.ly/quizaday%0A") 
							span.fa.fa-lg.fa-twitter 
		.col-md-4.quiz-col
			.row.date 
				p Date - {{ctrl.quiz.settings.featureDate}}
			.row.description
				h4 Description 
				p{{ctrl.quiz.settings.Description}}
			.row.leaderboard
			h4.quiz1 Top 5 Scores 
			span(ng-show="ctrl.loading") Loading ...
			.row(ng-show="!ctrl.loading",ng-repeat="player in ctrl.results | orderObjectBy:['-score'] | limitTo:ctrl.quantityToShow track by $index")
				.col-xs-1
					span.quiz1 {{$index+1}}.
				.col-xs-7(data-toggle="tooltip" title="{{player.profile.name}}" data-placement="top")
					span.quiz1.over {{player.profile.name}}
					script $('[data-toggle="tooltip"]').tooltip();                   
				.col-xs-4			
					span.quiz1(ng-switch="player.statusInt",ng-show="player.score") {{player.score}} 
		.col-md-4.quiz-col.quiz-col2
			.row.play(id="play row")
				button.button(ng-click="ctrl.playQuiz(ctrl.quiz)")#play-button Play
			.row.playtoo
				button.button(ng-click="ctrl.assignQuiz(ctrl.quiz)")#play-too Set this quiz for your Class
			.row.global-lead
				a.button(ng-href='/quiz#/results/{{ctrl.quiz.uuid}}') Global Leaderboard

		
