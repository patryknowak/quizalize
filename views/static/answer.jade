block header
    style.
        .answer {
            font-weight: 700;
            font-size: 28px;

            -ms-word-break: break-all;

            /* Be VERY careful with this, breaks normal words wh_erever */
            word-break: break-all;

            /* Non standard for webkit */
            word-break: break-word;

            -webkit-hyphens: auto;
            -moz-hyphens: auto;
            hyphens: auto;
        }
        .ng-hide-add, .ng-hide-remove {
           /* ensure visibility during the transition */
        display: block !important; /* yes, important */
        }
        .cssFade {
            transition: 0.2s linear all;
            opacity: 1;
        }
        .cssFade.ng-hide {
            opacity: 0;
        }




nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            btn(ng-click="quiz.cancel()")
                img(src="/img/quizalize.png", style="height:44px; margin-top:9px; padding-left:5px;")
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar', onclick='return false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
        .navbar-collapse.collapse#navbar        
            ul.nav.navbar-nav.navbar-right
                li
                    btn.btn.btn-info.pull-right(ng-click="quiz.cancel()", style=" margin-top:9px;") Cancel Quiz
.container
    .row(style="padding-top:10px")
        .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4.inverse-text.text-center
            .row
                .col-xs-6.text-left
                    h2 {{quiz.data.totalScore}} pts
                .col-xs-6.text-right    
                    h2 Q: {{quiz.questionId + 1}}/{{quiz.data.questionCount}}

    .row
        .col-x-12.col-sm-8.col-sm-offset-2
            .well(ng-show="quiz.showButtons",class="cssFade ng-scope ng-hide")
                .text-center
                    h3.quizQuestion#quizQuestion {{quiz.last.question}}
                    .row
                        .col-sm-6
                            h4 Correct answer
                            .answer#response {{quiz.last.answer}}
                        .col-sm-6
                            h4 Your answer
                            .answer(ng-class="{'text-success': quiz.last.correct, 'text-danger': !quiz.last.correct}")#cresponse {{quiz.last.response}}
                    br

                    h3(ng-class="{'text-success': quiz.last.correct, 'text-danger': !quiz.last.correct}") Score: <strong>{{quiz.last.roundedScore}}</strong>
                    h3 Time: <strong>{{quiz.last.seconds}} seconds</strong>

                    br
                    .btn.btn-block.btn-info(ng-click="quiz.nextQuestion();") Next