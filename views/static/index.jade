style.
    .login-action-container {
        max-width: 400px;
        margin: 0 auto 20px;
        padding: 40px;
        background: rgba(0,0,0, .2);
        border-radius: 20px;
    }


nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
        .navbar-header
            a(href="/")
                img(src="/img/quizalize.png", style="height:44px; margin-top:9px; padding-left:5px;")
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar', onclick='return false')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar


.container

    div#outdated
    br
    .row
        .row

            .well.well-sm(ng-show="start.errorMessage")
                h3.text-center {{start.errorMessage}}
                br
            form(role='form')
                .col-md-6
                    .login-action-container.inverse-text
                        h2 Are you in a class?
                        br
                        p Play against your classmates using the class code from your teacher
                        br
                        button.btn.btn-primary.btn-block.btn-info(ng-click="start.startClassQuiz()") Join a class quiz
                .col-md-6
                    .login-action-container.inverse-text
                        h2 Playing by yourself?
                        br
                        p All 100% free and you don't need an account to try one
                        br
                        button.btn.btn-primary.btn-block.btn-info(ng-click="start.startPublicQuiz()") Pick a quiz
                    br
                            
