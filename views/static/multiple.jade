.container
    .row(style="padding-top:10px")
        .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4.inverse-text
            .row
                .col-xs-6.text-left
                    h2 {{quiz.score}} Pts
                .col-xs-6.text-right
                    h2 Q: {{quiz.questionId + 1}}/{{quiz.questionCount}}

    .row
        .col-xs-12.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
            .well
                .text-center
                    h2(ng-show="quiz.question.length < 20").quizQuestion {{quiz.question}}
                    h3(ng-show="quiz.question.length >= 20").quizQuestion {{quiz.question}}
                    br
                .row
                    div(ng-repeat="alternative in quiz.alternatives track by $index", style="padding-bottom: 20px;", ng-class="{'col-xs-6': !quiz.longMode, 'col-xs-12': quiz.longMode}")
                        button.btn.btn-block.btn-info(ng-click="quiz.select($index);") {{alternative}}