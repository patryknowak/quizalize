.row
    .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
        .text-center
            h1 {{quiz.question}}
            br
            br
        form(role='form', ng-submit="quiz.answer()")
            .form-group
                label(for="userName") Answer
                input.form-control#userName(type="text", placeholder="Your answer", ng-model="quiz.yourAnswer")
            button.btn.btn-primary.btn-block(type="submit") Submit