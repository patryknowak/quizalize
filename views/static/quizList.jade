style. 
  label .glyphicon {
    color: rgba(0,0,0,.5);
    font-size: 12px;
    padding: 6px;
    cursor: pointer;
  }
  label .glyphicon:hover {
    color: black;
  }

  a.glyphicon:hover, a.glyphicon:focus {
    border: none;
    text-decoration: none; 
  }
  .popover {
  }

.container
    h1(ng-hide="quizzes.creating|| quizzes.registering") Hi there! What would you like to do?
        .class-code.pull-right(ng-show="ctrl.classCode")
            Your Class Code: {{ctrl.classCode}}                                    
    br
    .row(ng-hide="quizzes.creating || quizzes.registering")
        .row.well
            .quiz-preview(ng-show="true")
                .row
                    span(ng-class="{'col-sm-4': ctrl.classCode!=undefined && ctrl.classCode.length>0, 'col-sm-6': ctrl.classCode==undefined || ctrl.classCode==''}")
                        .border-block
                            center
                                h3 Make your own classroom quiz in 60 seconds
                            br
                            center
                                a.btn.btn-primary.btn-lg(ng-click="quizzes.create()") Create a new quiz
                    span(ng-class="{'col-sm-4': ctrl.classCode!=undefined && ctrl.classCode.length>0, 'col-sm-6': ctrl.classCode==undefined || ctrl.classCode=='' }")
                        .border-block
                            center
                                h3 Choose a pre-made quiz for your class to play
                            br
                            center
                                a.btn.btn-primary.btn-lg.btn-info(ng-href="/quiz/#/public") Choose a quiz
                    .col-sm-4(ng-hide="ctrl.classCode==undefined || ctrl.classCode==''")
                        .border-block
                            center
                                h3 Track your student's progress as they play
                            br
                            center
                                a.btn.btn-primary.btn-lg(ng-href="{{ctrl.link}}", target="zzishld") Open Teacher Dashboard

    .row.well(ng-show="quizzes.registering")
        h1.text-center One click class setup
            .form-horizontal(role="form")
        p No need to fill in full registration just yet, but please do enter a real email address so we can send you secure access to your data in the future. If you are already registered, then login before proceeding.
        .form-group
            .col-sm-3
                label.control-label Email
            .col-sm-9
                input.form-control#question(type="email", ng-model="quizzes.emailAddress", on-enter="quizzes.registerEmail();", placeholder="If you are already registered, please click login above")
                br

            .col-xs-12
                center
                    button.btn.btn-primary(ng-click="quizzes.registerEmail();", ng-disabled="quizzes.emailAddress.length == 0 || quizzes.registeringNow") Register
                br


    .row(ng-show="quizzes.creating")
        .col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
            .well
                h1 Create a Quiz

                form.form-horizontal(role="form")
                    .form-group
                        label.col-sm-3.control-label
                            | Name:
                            a.glyphicon.glyphicon-question-sign(data-toggle="popover" title="Quiz Title" data-content="Give your quiz a unique name so you can easily identify it." data-trigger="focus" data-placement="auto left" data-container="body" role="button" tabindex="0")
                        .col-sm-9
                            input.form-control#question(type="text", on-enter="quizzes.focusTopic();", ng-model="quizzes.newQuizName", placeholder="e.g. Capital Cities", autofocus="true")
                            br
                        label.control-label.col-sm-3                               
                            | Topic:    
                            a.glyphicon.glyphicon-question-sign(data-toggle="popover" title="Quiz Topic" data-content="You can provide an optional topic to help organize your quizzes into different topic areas. This is optional." data-trigger="focus" data-placement="auto left" data-container="body" role="button" tabindex="1")                        
                        .col-sm-9
                            input.form-control#category(type="text", on-enter="quizzes.createQuiz();",ng-model="quizzes.newQuizCategory", placeholder="e.g. Geography Level 1")
                            br
                        .col-sm-12
                            button.btn.btn-primary.btn-block(ng-click="quizzes.createQuiz();", ng-disabled="quizzes.newQuizName==''") Create Quiz

    .row(ng-hide="quizzes.creating || quizzes.didSupplyQuizName || quizzes.didRequestSample || quizzes.registering")
        .col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3(ng-show="quizzes.hasOwnQuizzes")
            h2 Manage Your Existing quizzes
            .row(ng-repeat="quiz in quizzes.pastQuizzes | filter:{publicAssigned:false} track by $index", style="padding-bottom: 10px")
                .col-sm-6.col-xs-12(ng-class="{'.col-sm-6.col-xs-12': !quiz.publicAssigned, '.col-sm-10.col-xs-12': quiz.publicAssigned}")
                    h4 {{quiz.name}}  
                        span(ng-show="quiz.categoryId") ({{quizzes.topics[quiz.categoryId].name}})
                .col-sm-2.col-xs-3
                    button.btn.btn-info.btn-block(ng-click="quizzes.editQuiz(quiz);",ng-hide="quiz.publicAssigned")
                        span.glyphicon.glyphicon-pencil
                    br
                .col-sm-2.col-xs-3
                    button.btn.btn-danger.btn-block(ng-click="quizzes.deleteQuiz(quiz);",ng-hide="quiz.publicAssigned")
                        span.glyphicon.glyphicon-remove
                    br
                .col-sm-2.col-xs-6
                    center
                        button.btn.btn-info(ng-click="quizzes.unpublishQuiz(quiz);", ng-show="quiz.enabled",style="padding: 10px") Unpublish
                        button.btn.btn-info(ng-click="quizzes.republishQuiz(quiz);", ng-hide="quiz.enabled",style="padding: 10px") Publish
                        br
            p        
            p.text-info(ng-hide="quizzes.pastQuizzes.length") When you have created quizzes they will appear here

    .row(ng-hide="quizzes.creating || quizzes.didSupplyQuizName || quizzes.didRequestSample || quizzes.registering")
        .col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3(ng-show="quizzes.hasPublicAssignedQuizzes")
            h2 Your Public Quizzes
            .row(ng-repeat="quiz in quizzes.pastQuizzes | filter:{publicAssigned:true} track by $index", style="padding-bottom: 10px")
                .col-sm-6.col-xs-12
                    h4 {{quiz.name}}
                        span(ng-show="quiz.publicAssigned")
                .col-sm-6.col-xs-12                
                    button.btn.btn-danger.btn-block(ng-click="quizzes.unassignPublicQuiz(quiz);", style="padding: 10px")
                        span.glyphicon.glyphicon-remove
            p        
            p.text-info(ng-hide="quizzes.pastQuizzes.length") When you have created quizzes they will appear here            


