extends ./layout

block body
    .container-fluid
        .row
            .col-md-8.col-md-offset-2
                h1 Stats
                table(border="1px solid  #7a7", style="background-color:white;font-size:15px; width:100%")
                    thead
                        th 
                        th Last Week 
                        th Two Weeks Ago 
                        th Three Weeks Ago 
                        th Four Weeks Ago
                        th Last 30 Days 
                    tbody
                        tr
                            td Active Teachers
                            td #{stats.activeTeachersLastWeek}
                            td #{stats.activeTeachersTwoWeeksAgo}
                            td #{stats.activeTeachersThreeWeeksAgo}
                            td #{stats.activeTeachersFourWeeksAgo}
                            td #{stats.activeTeachersLastMonth}
                        tr
                            td Active Classes
                            td #{stats.activeClassesLastWeek}
                            td #{stats.activeClassesTwoWeeksAgo}
                            td #{stats.activeClassesThreeWeeksAgo}
                            td #{stats.activeClassesFourWeeksAgo}
                            td #{stats.activeClassesLastMonth}
                        tr 
                            td Completed Quiz Instances
                            td #{stats.activityLastWeek}
                            td #{stats.activityTwoWeeksAgo}
                            td #{stats.activityThreeWeeksAgo}
                            td #{stats.activityFourWeeksAgo}
                            td #{stats.activityLastMonth}
                        tr 
                            td Active Students 
                            td 
                            td 
                            td 
                            td 
                            td #{stats.studentsLastMonth}
                        tr 
                            td Repeat Students
                            td 
                            td 
                            td 
                            td 
                            td #{stats.repeatStudentsLastMonth}
                        tr
                            td Power users (>1 class)
                            td #{stats.powerUsersLastWeek}
                            td #{stats.powerUsersTwoWeeksAgo}
                        tr
                            td Published Apps
                            td #{stats.publishedAppThisWeek}
                        tr 
                            td Published Quizzes 
                            td #{stats.publishedQuizThisWeek}
                        tr 
                            td Total Published Quizzes (all time)
                            td #{stats.publishedQuizzes}
                        tr 
                            td Publishers (all time)
                            td #{stats.quizPublishersCount}
                        tr
                            td Total Quizzes Completed
                            td #{stats.totalQuizPlayed}
                        
                            
                p#totalActivities 
                p#totalQuizPlayed
                p#activeClasses
                p#activeTeachers
                p#powerUsers
                p#publishedQuizzes
                p#publishedApps
                p#quizPublishers
                p#appPublishers
        
    
