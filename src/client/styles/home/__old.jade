                    // Bottom Carousel Indicators
                    ol.carousel-indicators
                        li.active(data-target='#quote-carousel', data-slide-to='0')
                        li(data-target='#quote-carousel', data-slide-to='1')
                        li(data-target='#quote-carousel', data-slide-to='2')
                    // Carousel Slides / Quotes
                    .carousel-inner
                        // Quote 1
                        .item.active
                            blockquote
                                .row
                                    .col-sm-3.text-center
                                        img(src='../img/doghill.png')
                                    #dog-kennel.col-sm-9
                                        p.carousel-paragraph ...great tool for testing children in an engaging and useful way...
                                        small.quote_giver Ross Orton, Deputy Headteacher at Dog Kennel Hill Primary School
                        // Quote 2
                        .item
                            blockquote
                                .row
                                    .col-sm-3.text-center
                                        img(src='../img/Millbrook.png')
                                    .col-sm-9
                                        p.carousel-paragraph It was good. It was entertaining. You got to learn lots.
                                        small.quote_giver Megan, Year 6 pupil, Millbrook Academy
                        // Quote 3
                        .item
                            blockquote
                                .row
                                    .col-sm-3.text-center
                                        img(src='../img/Pagnel.png', style='height:120px; width:auto; margin-left:50px;')
                                    .col-sm-9
                                        p.carousel-paragraph Children were highly enthused - it's a great tool for consolidating facts
                                        small.quote_giver Dave Harwood, Year 6 Teacher, Paganel School
                    // Carousel Buttons Next/Prev
                    a.left.carousel-control(data-slide='prev', href='#quote-carousel')
                        i.fa.fa-chevron-left
                    a.right.carousel-control(data-slide='next', href='#quote-carousel')
                        i.fa.fa-chevron-right
